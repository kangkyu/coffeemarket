<div class="center">
  <h2>Your Purchase History</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Item</th>
    <th class="center">Price</th>
    <th class="center">Customer</th>
    <th class="center">Date Sold</th>
  </tr>

  <% @orders.each do |order| %>

    <tr>
      <td><%= image_tag order.roasting.image.url(:thumb) %></td>
      <td><%= order.roasting.name %></td>
      <td><%= number_to_currency(order.roasting.price) %></td>
      <td><%= order.buyer.name %></td>
      <td><%= order.created_at.strftime("%B %-d, %Y") %></td>
    </tr>

  <% end %>
</table>

<% if user_signed_in? %>
  <%= link_to 'New Roasting', new_roasting_path, class: "btn btn-link" %>
<% end %>