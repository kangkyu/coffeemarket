<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Name</th>
    <th class="center">Description</th>
    <th class="center">Price</th>
    <th class="center">Action</th>
  </tr>

  <% @roastings.each do |roasting| %>

    <tr>
      <td><%= image_tag roasting.image.url(:thumb) %></td>
      <td><%= roasting.name %></td>
      <td><%= roasting.description %></td>
      <td><%= number_to_currency(roasting.price) %></td>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", roasting, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_roasting_path(roasting), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', roasting, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>

  <% end %>
</table>

<% if user_signed_in? %>
  <%= link_to 'New Roasting', new_roasting_path, class: "btn btn-link" %>
<% end %>