<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @roasting.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @roasting.name %></h3>
    <p><%= @roasting.description %></p>
    <p><%= number_to_currency(@roasting.price) %></p>
  </div>
</div>

<% if current_user.id == @roasting.user_id %>
<%= link_to 'Edit', edit_roasting_path(@roasting), class: "btn btn-link" %> |
<% end %>
<%= link_to 'Back', roastings_path, class: "btn btn-link" %>
